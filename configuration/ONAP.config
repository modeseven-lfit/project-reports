# Project identifier
project: "ONAP"

# Output configuration - ONAP specific settings
output:
  # ONAP has many repositories, show more in reports
  top_n_repos: 60
  bottom_n_repos: 30

  # All sections enabled for comprehensive ONAP analysis
  include_sections:
    contributors: true
    organizations: true
    repo_feature_matrix: true
    inactive_distributions: true
    global_summary: true
    activity_distribution: true
    top_active_repositories: true
    least_active_repositories: true
    contributor_leaderboards: true
    organization_leaderboard: true

# Time windows for analysis (in days)
time_windows:
  last_30_days: 30
  last_90_days: 90
  last_365_days: 365
  last_3_years: 1095
  last_5_years: 1825

# Activity threshold - ONAP considers 12 months for inactive
activity_threshold_days: 365

# Age buckets for inactive repositories
age_buckets:
  very_old_years: 3
  old_years: 1

# Feature detection configuration
features:
  enabled:
    - dependabot
    - github2gerrit_workflow
    - pre_commit
    - readthedocs
    - sonatype_config
    - project_types
    - workflows

# Workflow classification patterns - ONAP specific
workflows:
  classify:
    verify: ["verify", "test", "ci", "check", "build", "unit", "integration"]
    merge: ["merge", "release", "deploy", "publish", "staging"]

# Performance settings - optimized for ONAP's large scale
performance:
  max_workers: 16
  cache: true

# Rendering configuration
render:
  show_net_lines: true
  show_added_removed: false
  abbreviate_large_numbers: true
  large_number_threshold: 10000

  # Emoji indicators
  emoji:
    active: "‚úÖ"
    inactive: "‚ö†Ô∏è"
    missing: "‚ùå"
    present: "‚úÖ"
    very_old: "üî¥"
    old: "üü°"

  # Table formatting - accommodate ONAP's longer repository names
  max_repo_name_length: 70
  max_author_name_length: 40

# Privacy and security
privacy:
  mask_emails: false
  anonymize_authors: false

# Logging configuration
logging:
  level: "INFO"
  include_timestamps: true
  log_per_repo_timing: true

# Data quality settings
data_quality:
  unknown_email_placeholder: "unknown@onap.org"
  skip_binary_changes: true
  max_history_years: 10

# ONAP-specific extensions
extensions:
  # Future: ONAP Jira integration
  jira_integration:
    enabled: false

  # Future: Release tracking
  release_tracking:
    enabled: false

# Schema version
schema_version: "1.0.0"
