# SPDX-FileCopyrightText: 2025 The Linux Foundation

# Project identifier
project: ONAP

# Gerrit API integration for ONAP
gerrit:
  enabled: true
  host: "gerrit.onap.org"
  timeout: 30.0

# Jenkins API integration for ONAP
jenkins:
  enabled: true
  host: "jenkins.onap.org"
  timeout: 30.0

# ONAP-specific activity thresholds
activity_thresholds:
  current_days: 365      # ✅ Current: commits within last 365 days
  active_days: 1095      # ☑️ Active: no commits between 365-1095 days

# Time windows for ONAP analysis
time_windows:
  last_30_days: 30
  last_90_days: 90
  last_365_days: 365
  last_3_years: 1095

# Enable all relevant features for ONAP
features:
  enabled:
    - dependabot
    - github2gerrit_workflow
    - g2g
    - pre_commit
    - readthedocs
    - sonatype_config
    - project_types
    - workflows
    - gitreview

# Performance settings optimized for ONAP's large repository count
performance:
  max_workers: 8
  cache: false

# Rendering configuration
render:
  show_net_lines: true
  show_added_removed: false
  abbreviate_large_numbers: true
  large_number_threshold: 10000
  max_repo_name_length: 60  # Longer names for ONAP repositories

# HTML table configuration
html_tables:
  sortable: true
  searchable: true
  pagination: true
  entries_per_page: 25
  page_size_options: [25, 50, 100, 200]
  min_rows_for_sorting: 3

# Enable GitHub API integration for workflow status
extensions:
  github_api:
    enabled: true
    timeout: 30.0
    include_issues: false
    include_prs: false

# Logging configuration for debugging
logging:
  level: "INFO"
  include_timestamps: true
  log_per_repo_timing: false

# Schema version
schema_version: "1.0.0"
