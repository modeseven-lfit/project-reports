# Test configuration for GitHub API integration
# This config enables GitHub workflow status retrieval for testing

# Inherit base template
template_path: "./configuration/template.config"

# Project information
project:
  name: "GitHub API Test"
  description: "Test configuration for GitHub API workflow status integration"

# Gerrit configuration (use a smaller subset for testing)
gerrit:
  host: "gerrit.o-ran-sc.org"
  projects:
    include:
      - ".*"  # Include all projects for comprehensive testing
    exclude: []

# Jenkins configuration (optional)
jenkins:
  host: ""  # No Jenkins for this test

# Activity thresholds
activity_thresholds:
  current_days: 365
  active_days: 1095

# Feature detection
features:
  enabled:
    - dependabot
    - github2gerrit_workflow
    - g2g
    - pre_commit
    - readthedocs
    - sonatype_config
    - project_types
    - workflows
    - gitreview

# GitHub API Integration - ENABLED for testing
extensions:
  github_api:
    enabled: true
    token: ""  # Will use GITHUB_TOKEN environment variable
    timeout: 30.0
    include_issues: false
    include_prs: false

# Workflow classification patterns
workflows:
  classify:
    verify: ["verify", "test", "ci", "check", "build", "lint"]
    merge: ["merge", "release", "deploy", "publish", "pages"]

# Output configuration
output:
  formats: ["json", "markdown", "html"]
  compress: true
  include_metadata: true

# Performance settings
performance:
  max_workers: 4
  timeout: 300
  memory_limit_mb: 2048

# Logging
logging:
  level: "DEBUG"  # Enable debug logging for GitHub API calls
  include_timestamps: true
