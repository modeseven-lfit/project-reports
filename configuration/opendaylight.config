# SPDX-FileCopyrightText: 2025 The Linux Foundation

# Project identifier
project: OpenDaylight

# Gerrit API integration for OpenDaylight
gerrit:
  enabled: true
  host: "git.opendaylight.org"
  timeout: 30.0

# Jenkins API integration for OpenDaylight
jenkins:
  enabled: true
  host: "jenkins.opendaylight.org"
  timeout: 30.0

# OpenDaylight-specific activity thresholds (half of defaults)
activity_thresholds:
  current_days: 183      # ‚úÖ Current: commits within last ~6 months (365/2)
  active_days: 548       # ‚òëÔ∏è Active: no commits between 183-548 days (~18 months)
  # üõë Inactive: no commits in 548+ days

# Time windows for OpenDaylight analysis
time_windows:
  last_30_days: 30
  last_90_days: 90
  last_365_days: 365
  last_3_years: 1095

# Enable all relevant features for OpenDaylight
features:
  enabled:
    - dependabot
    - github2gerrit_workflow
    - g2g
    - pre_commit
    - readthedocs
    - sonatype_config
    - project_types
    - workflows
    - gitreview
    - github_mirror

# Performance settings optimized for OpenDaylight
performance:
  max_workers: 8
  cache: false

# Rendering configuration
render:
  show_net_lines: true
  show_added_removed: false
  abbreviate_large_numbers: true
  large_number_threshold: 10000
  max_repo_name_length: 60

# HTML table configuration
html_tables:
  sortable: true
  searchable: true
  pagination: true
  entries_per_page: 25
  page_size_options: [25, 50, 100, 200]
  min_rows_for_sorting: 3

# Enable GitHub API integration for workflow status
extensions:
  github_api:
    enabled: true
    timeout: 30.0
    include_issues: false
    include_prs: false

# Logging configuration
logging:
  level: "INFO"
  include_timestamps: true
  log_per_repo_timing: false

# Schema version
schema_version: "1.0.0"
