# Project identifier
project: "Opendaylight"

# Output configuration - Opendaylight specific settings
output:
  # Opendaylight has moderate number of repositories
  top_n_repos: 40
  bottom_n_repos: 20

  # All sections enabled for comprehensive Opendaylight analysis
  include_sections:
    contributors: true
    organizations: true
    repo_feature_matrix: true
    inactive_distributions: true
    global_summary: true
    activity_distribution: true
    top_active_repositories: true
    least_active_repositories: true
    contributor_leaderboards: true
    organization_leaderboard: true

# Time windows for analysis (in days)
time_windows:
  last_30_days: 30
  last_90_days: 90
  last_365_days: 365
  last_3_years: 1095

# Activity threshold - Opendaylight considers 15 months for inactive
activity_threshold_days: 456

# Age buckets for inactive repositories
age_buckets:
  very_old_years: 4
  old_years: 2

# Feature detection configuration
features:
  enabled:
    - dependabot
    - github2gerrit_workflow
    - pre_commit
    - readthedocs
    - sonatype_config
    - project_types
    - workflows

# Workflow classification patterns - Opendaylight specific
workflows:
  classify:
    verify: ["verify", "test", "ci", "check", "build", "unit", "csit", "validate"]
    merge: ["merge", "release", "deploy", "publish", "distribution"]

# Performance settings - optimized for Opendaylight's Java-heavy codebase
performance:
  max_workers: 10
  cache: true

# Rendering configuration
render:
  show_net_lines: true
  show_added_removed: false
  abbreviate_large_numbers: true
  large_number_threshold: 8000

  # Emoji indicators
  emoji:
    active: "‚úÖ"
    inactive: "‚ö†Ô∏è"
    missing: "‚ùå"
    present: "‚úÖ"
    very_old: "üî¥"
    old: "üü°"

  # Table formatting - Opendaylight repository names
  max_repo_name_length: 55
  max_author_name_length: 35

# Privacy and security
privacy:
  mask_emails: false
  anonymize_authors: false

# Logging configuration
logging:
  level: "INFO"
  include_timestamps: true
  log_per_repo_timing: true

# Data quality settings
data_quality:
  unknown_email_placeholder: "unknown@opendaylight.org"
  skip_binary_changes: true
  max_history_years: 12

# Opendaylight-specific extensions
extensions:
  # Future: Maven artifact tracking
  maven_artifacts:
    enabled: false

  # Future: Karaf bundle analysis
  karaf_bundles:
    enabled: false

  # Future: YANG model analysis
  yang_models:
    enabled: false

# Schema version
schema_version: "1.0.0"
