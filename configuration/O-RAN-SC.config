# Project identifier
project: "O-RAN-SC"

# Output configuration - O-RAN-SC specific settings
output:
  # Show more repositories for this large project
  top_n_repos: 50
  bottom_n_repos: 25

  # All sections enabled for comprehensive O-RAN-SC analysis
  include_sections:
    contributors: true
    organizations: true
    repo_feature_matrix: true
    inactive_distributions: true
    global_summary: true
    activity_distribution: true
    top_active_repositories: true
    least_active_repositories: true
    contributor_leaderboards: true
    organization_leaderboard: true

# Time windows for analysis (in days)
time_windows:
  last_30_days: 30
  last_90_days: 90
  last_365_days: 365
  last_3_years: 1095

# Activity threshold - O-RAN-SC considers 18 months for inactive
activity_threshold_days: 548

# Age buckets for inactive repositories
age_buckets:
  very_old_years: 4
  old_years: 2

# Feature detection configuration
features:
  enabled:
    - dependabot
    - github2gerrit_workflow
    - pre_commit
    - readthedocs
    - sonatype_config
    - project_types
    - workflows

# Workflow classification patterns - O-RAN-SC specific
workflows:
  classify:
    verify: ["verify", "test", "ci", "check", "build", "unit"]
    merge: ["merge", "release", "deploy", "publish", "integration"]

# Performance settings - higher for O-RAN-SC's large codebase
performance:
  max_workers: 12
  cache: true

# Rendering configuration
render:
  show_net_lines: true
  show_added_removed: false
  abbreviate_large_numbers: true
  large_number_threshold: 5000

  # Emoji indicators
  emoji:
    active: "‚úÖ"
    inactive: "‚ö†Ô∏è"
    missing: "‚ùå"
    present: "‚úÖ"
    very_old: "üî¥"
    old: "üü°"

  # Table formatting - longer names for O-RAN-SC repos
  max_repo_name_length: 60
  max_author_name_length: 35

# Privacy and security
privacy:
  mask_emails: false
  anonymize_authors: false

# Logging configuration
logging:
  level: "INFO"
  include_timestamps: true
  log_per_repo_timing: true

# Data quality settings
data_quality:
  unknown_email_placeholder: "unknown@o-ran-sc.org"
  skip_binary_changes: true
  max_history_years: 8

# Schema version
schema_version: "1.0.0"