# This file demonstrates how project-specific configurations can override
# the template defaults through deep merge functionality.

# Project identifier - will override template
project: sample-project

# Override output settings for this project
output:
  # Override specific sections - disable organization analysis for this project
  include_sections:
    organizations: false  # Override template default of true
    repo_feature_matrix: true
    all_repositories: true
    contributor_leaderboards: true

# Add additional time window for this project
time_windows:
  last_7_days: 7       # Additional window not in template
  last_30_days: 30     # Inherited from template (no change)
  last_90_days: 90     # Inherited from template (no change)
  last_2_years: 730    # Override template's last_3_years

# More restrictive activity threshold for this project
activity_threshold_days: 180  # Override template default of 365

# Different age buckets
age_buckets:
  very_old_years: 2    # Override template default of 3
  old_years: 0.5       # Override template default of 1

# Project-specific feature configuration
features:
  enabled:
    - dependabot
    - pre_commit
    - readthedocs
    - project_types
    - gitreview
    # Disable some features for this project:
    # - github2gerrit_workflow (not enabled)
    # - sonatype_config (not enabled)
    # - workflows (not enabled)

# Override performance settings for smaller project
performance:
  max_workers: 4       # Override template default of 8
  cache: true          # Override template default of false

# Custom rendering options for this project
render:
  show_net_lines: false         # Override template default of true
  show_added_removed: true      # Override template default of false
  abbreviate_large_numbers: false  # Override template default of true

  # Keep template emoji settings but add project-specific ones
  emoji:
    active: "üü¢"        # Override template default of ‚úÖ
    inactive: "üî¥"      # Override template default of ‚ö†Ô∏è
    missing: "‚ö´"       # Override template default of ‚ùå
    # present: "‚úÖ"     # Will inherit from template
    # very_old: "üî¥"    # Will inherit from template

  # Override table formatting
  max_repo_name_length: 40  # Override template default of 50

# Enable privacy features for this project
privacy:
  mask_emails: true          # Override template default of false
  anonymize_authors: true    # Override template default of false

# Enhanced logging for this project
logging:
  level: "DEBUG"             # Override template default of INFO
  log_per_repo_timing: true  # Override template default of false

# Project-specific data quality settings
data_quality:
  unknown_email_placeholder: "redacted@project.local"  # Override template

# This project wants to enable some experimental extensions
extensions:
  language_analysis:
    enabled: true            # Override template default of false

  # Keep other extensions disabled (inherited from template)
  github_api:
    enabled: false

  security_scanning:
    enabled: false

# Add project-specific metadata (this section doesn't exist in template)
project_metadata:
  description: "Sample project demonstrating configuration overrides"
  maintainer: "sample-team@example.org"
  repository_pattern: "sample-*"
  expected_repo_count: 25
  notes:
    - "This project uses aggressive activity thresholds"
    - "Email masking enabled for privacy compliance"
    - "Reduced table sizes for focused reporting"
